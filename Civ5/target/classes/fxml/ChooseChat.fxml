<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="View.Controller.ChooseChat"
      prefHeight="900.0" prefWidth="1600.0"
fx:id="pane">

<VBox layoutY="400" layoutX="600" prefWidth="400" spacing="20">
    <Text text="enter receiver username" style="-fx-font-family: 'Tw Cen MT'; -fx-font-size: 42;" />
    <TextField prefWidth="300" prefHeight="60" style="-fx-background-radius: 10;" fx:id="textField"/>
    <Button text="start chat" style="-fx-font-family: 'Tw Cen MT'; -fx-font-size: 30;
    -fx-background-color: #7474e1; -fx-background-radius: 10;" prefWidth="400" prefHeight="60" onMouseClicked="#startChat"/>
</VBox>
</Pane>
